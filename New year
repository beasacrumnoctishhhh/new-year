body {
  margin: 0;
  height: 100vh;
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(120deg, #1d2671, #c33764);
  color: white;
  overflow: hidden;
  text-align: center;
}

.page {
  display: none;
  padding: 60px 20px;
  animation: fade 1s ease;
}

.page.active {
  display: block;
}

button {
  padding: 14px 26px;
  font-size: 16px;
  border: none;
  border-radius: 30px;
  background: gold;
  color: black;
  margin-top: 30px;
  cursor: pointer;
}

ul {
  list-style: none;
  padding: 0;
}

li {
  margin: 10px 0;
}

/* Fade animation */
@keyframes fade {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

/* Floating stickers */
.sticker {
  position: absolute;
  font-size: 30px;
  animation: float 6s infinite linear;
}

.sticker:nth-child(1) { left: 10%; animation-duration: 7s; }
.sticker:nth-child(2) { left: 30%; animation-duration: 6s; }
.sticker:nth-child(3) { left: 60%; animation-duration: 8s; }
.sticker:nth-child(4) { left: 80%; animation-duration: 5s; }

@keyframes float {
  from { bottom: -50px; }
  to { bottom: 110%; }
}
let pages = document.querySelectorAll(".page");
let current = 0;

function start() {
  document.getElementById("bgMusic").play();
  nextPage();
}

function nextPage() {
  pages[current].classList.remove("active");
  current++;
  if (current < pages.length) {
    pages[current].classList.add("active");
  }
}
